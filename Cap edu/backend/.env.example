# Backend Configuration
DATABASE_URL=sqlite:///qazkids.db
# Для production используйте PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/qazkids

SECRET_KEY=your-super-secret-key-change-in-production

# API Keys (опционально)
OPENAI_API_KEY=sk-xxx
GOOGLE_MAPS_API_KEY=xxx

# Server Configuration
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://yourdomain.com

# Email Configuration (для отправки писем)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis Configuration (для кэша)
REDIS_URL=redis://localhost:6379/0

# AWS Configuration (для S3 хранения файлов)
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx
AWS_S3_BUCKET_NAME=qazkids-storage

# Logging
LOG_LEVEL=INFO
